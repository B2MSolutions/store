<div class="pageTitle">
  <h1>New <%= @product.title %></h1>
</div>

<div class="toolbar">
  <a class="cancel" href="<%= url_for :action => :index %>">Cancel</a>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @product.object %>"/>
    <ul>
      
          <li>
            <label for="product[name]">Name</label>
            <input type="text" name="product[name]" <%= placeholder("Name") %> />
          </li>
      
          <li>
            <label for="product[sku]">Sku</label>
            <input type="text" name="product[sku]" <%= placeholder("Sku") %> />
          </li>
      
          <li>
            <label for="product[brand]">Brand</label>
            <input type="text" name="product[brand]" <%= placeholder("Brand") %> />
          </li>
      
          <li>
            <label for="product[price]">Price</label>
            <input type="text" name="product[price]" <%= placeholder("Price") %> />
          </li>
      
          <li>
            <label for="product[quantity]">Quantity</label>
            <input type="text" name="product[quantity]" <%= placeholder("Quantity") %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Create"/>
  </form>
</div>